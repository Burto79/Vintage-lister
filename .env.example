# Anthropic API Key (required)
ANTHROPIC_API_KEY=your_api_key_here

# Image sync folder (where your phone syncs photos)
# For iPhone: /Users/yourusername/Pictures/iCloud Photos/Downloads
# For Android/Google Photos: /Users/yourusername/Google Photos
WATCH_FOLDER=/Users/yourusername/Pictures/sync

# eBay API Credentials (get from developer.ebay.com)
# Get these from: https://developer.ebay.com/my/keys
EBAY_APP_ID=your_app_id_here
EBAY_CERT_ID=your_cert_id_here
EBAY_DEV_ID=your_dev_id_here
EBAY_AUTH_TOKEN=your_oauth_token_here

# eBay Settings
EBAY_SANDBOX=false  # Set to true for testing
PAYPAL_EMAIL=your_paypal@email.com
SHIP_FROM_ZIP=90210

# Optional: Use extended thinking mode (recommended for better analysis)
USE_EXTENDED_THINKING=true

# Optional: Model to use (supports extended thinking)
CLAUDE_MODEL=claude-sonnet-4-20250514
